{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    // Node >=8.9
    "target": "es2017",
    "lib": ["es2016", "es2017.intl", "es2017.object", "es2017.string", "es2017.typedarrays", "esnext.asynciterable"],
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "fixtures/**/*.ts"],
  "typeRoots": [
    "node_modules/@types"
  ]
}
